#!/bin/bash

RUN_DIR=/var/vcap/sys/run/zabbix-agentd
LOG_DIR=/var/vcap/sys/log/zabbix-agentd
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    cd /var/vcap/packages/zabbix-agentd

    export PATH=/var/vcap/packages/zabbix-agentd/bin:$PATH

    exec /var/vcap/packages/zabbix-agentd/bin/zabbix-agentd

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac